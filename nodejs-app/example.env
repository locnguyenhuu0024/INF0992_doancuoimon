# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost
MQTT_PORT=1883
MQTT_CLIENT_ID=nodejs_subscriber_client
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC=esp8266/sensor_data
MQTT_QOS=0

# PostgreSQL Configuration
PGUSER=postgres
PGHOST=localhost
PGDATABASE=sensordata
PGPASSWORD=postgres
PGPORT=5432

# Telegram Configuration
# Để lấy token: Tìm @BotFather trên Telegram và gõ /newbot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Để lấy chat ID: 
# 1. Gửi tin nhắn cho bot của bạn
# 2. Mở URL: https://api.telegram.org/botYOUR_BOT_TOKEN_HERE/getUpdates
# 3. Tìm "chat":{"id":XXXXXXXXX} trong kết quả JSON
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Các cài đặt khác
GAS_THRESHOLD=400
TEMP_THRESHOLD=45
TELEGRAM_REPORT_INTERVAL=300000 